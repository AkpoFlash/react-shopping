{
	"compilerOptions": {
		"outDir": "./dist/",
		"baseUrl": "./",
		"sourceMap": true,
		"strictNullChecks": true,
		"module": "es6",
		"jsx": "react",
		"target": "es5",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"~/*": [
				"src/*",
			]
		}
	},
	"exclude": [
			"node_modules"
    ],
	"include": [
		"./src/"
	]
}